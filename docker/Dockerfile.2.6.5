FROM ruby:2.6.5-alpine

RUN apk add --update --no-cache tzdata nano libexif-dev openssh-client xz-dev libpq nodejs gcompat build-base less git postgresql-dev
RUN cp /usr/share/zoneinfo/Asia/Yekaterinburg /etc/localtime && echo 'Asia/Yekaterinburg' > /etc/timezone

RUN gem install bundler -v '2.0.2'
RUN ssh-keyscan -H github.com >> /etc/ssh/ssh_known_hosts

ENV BUNDLE_APP_CONFIG /app/.bundle

WORKDIR /app
